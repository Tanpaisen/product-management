extends ../../layouts/default.pug

block main
    h1 Danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            button(
                class="btn btn-sm btn-outline-success active"
            ) Tất cả
            button(
                class="btn btn-sm btn-outline-success"
            ) Hoạt động
            button(
                class="btn btn-sm btn-outline-success"
            ) Dừng hoạt động

    table.table.table-hover.table-sm
        thead
            tr
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động
        tbody
            tr 
                td 1
                td 
                    img(
                        src="/uploads/products/sample-product.jpg"
                        alt="Sample Product"
                        width="50"
                    )
                td Sample Product
                td 100,000 VND
                td 
                    span.badge.bg-success Hoạt động
                td 
                    a.btn.btn-sm.btn-primary(href=`${prefixAdmin}/products/edit/1`) Sửa
                    button.btn.btn-sm.btn-danger(data-id="1") Xóa
            tr